doctype html
html
	head
		title #{title}
		link(rel='stylesheet', href='/css/style.css')
		meta(name="viewport" content="width=device-width, initial-scale=1")
	body
		main
			block header
				header.header
					img(src='images/logoResize.png' alt="Game Logo" class="center")
					h1 #{title}
			block nav
				nav.nav
					if isLoggedIn
						a(href=`/settings`)
							| #{username}
					a(href=`/`)
						| Home
			block content
				section(class = "errorMessage") 
					h3 #{ reason }
					